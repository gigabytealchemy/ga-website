  { name: "Cormorant Garamond", family: "'Cormorant Garamond', serif", import: "https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;700&display=swap" },
  { name: "Crimson Text", family: "'Crimson Text', serif", import: "https://fonts.googleapis.com/css2?family=Crimson+Text:wght@400;700&display=swap" },
  { name: "Libre Baskerville", family: "'Libre Baskerville', serif", import: "https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&display=swap" },
  { name: "EB Garamond", family: "'EB Garamond', serif", import: "https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;700&display=swap" },
  { name: "Merriweather", family: "'Merriweather', serif", import: "https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" },
  { name: "Lora", family: "'Lora', serif", import: "https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap" },

