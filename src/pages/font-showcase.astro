  { name: "Space Grotesk", family: "'Space Grotesk', sans-serif", import: "https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;700&display=swap" },
  { name: "JetBrains Mono", family: "'JetBrains Mono', monospace", import: "https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" },
  { name: "IBM Plex Sans", family: "'IBM Plex Sans', sans-serif", import: "https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;700&display=swap" },
